<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/foto_image"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/perro2" />

            <TextView
                android:id="@+id/nombre_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/foto_image"
                android:textSize="18sp"
                android:padding="16dp"
                android:textStyle="bold"
                android:text="Nombre de la mascota"/>

            <TextView
                android:id="@+id/raza_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_text"
                android:paddingStart="16dp"
                android:layout_centerInParent="true"
                android:paddingEnd="16dp"
                android:textSize="16sp"
                android:text="Raza: Pastor Aleman"/>

            <TextView
                android:id="@+id/edad_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/raza_text"
                android:layout_marginTop="2dp"
                android:layout_centerInParent="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:text="Edad: 2 a単os"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/due単o_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edad_text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="Raza: Pastor Aleman"/>

            <TextView
                android:id="@+id/correo_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/due単o_text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_centerInParent="true"
                android:textSize="16sp"
                android:text="Due単o: Andy Vilca"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>

</ScrollView>
