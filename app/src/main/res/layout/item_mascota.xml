<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/foto_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="16dp"
            android:scaleType="centerCrop"
            tools:srcCompat="@drawable/perro2"/>

        <TextView
            android:id="@+id/nombre_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Nombre del la mascota"/>

        <TextView
            android:id="@+id/raza_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/nombre_text"

            android:textSize="16sp"
            tools:text="Pastor Aleman"/>
        <TextView
            android:id="@+id/edad_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/foto_image"
            android:layout_below="@+id/raza_text"
            android:layout_marginBottom="8dp"
            android:textSize="16sp"
            tools:text="2 aÃ±os"/>



    </RelativeLayout>

</android.support.v7.widget.CardView>